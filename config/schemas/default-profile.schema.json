{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-agent-hub/schemas/default-profile.schema.json",
  "title": "Default Profile",
  "description": "Validates config/default-profile.json structure.",
  "type": "object",
  "required": ["servers", "memoryBackend", "projectContextDir"],
  "properties": {
    "servers": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "optionalServers": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true,
      "default": []
    },
    "memoryBackend": {
      "type": "string",
      "enum": ["sqlite", "postgresql", "hybrid"],
      "default": "sqlite"
    },
    "projectContextDir": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}

