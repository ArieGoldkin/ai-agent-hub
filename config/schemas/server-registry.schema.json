{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-agent-hub/schemas/server-registry.schema.json",
  "title": "Server Registry",
  "description": "Validates config/server-registry.json entries.",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9-_]+$": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "config": { "type": ["object", "null"] },
        "capabilities": {
          "type": "array",
          "items": { "type": "string" }
        },
        "requiredBy": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

