{
  "name": "ai-agent-hub",
  "version": "1.0.2",
  "type": "module",
  "description": "NPX tool: Run 'npx ai-agent-hub init' to setup Claude Desktop with MCP servers + AI agents",
  "author": "Arie Goldkin",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "ai-agent-hub": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src bin --ext .ts",
    "lint:fix": "eslint src bin --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"bin/**/*.ts\" \"*.json\" \"*.md\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run typecheck && npm run lint && npm run format:check && npm run build"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "enquirer": "^2.4.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "files": [
    "dist/",
    "agents/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArieGoldkin/ai-agent-hub.git"
  },
  "bugs": {
    "url": "https://github.com/ArieGoldkin/ai-agent-hub/issues"
  },
  "homepage": "https://github.com/ArieGoldkin/ai-agent-hub#readme",
  "keywords": [
    "mcp",
    "claude",
    "claude-desktop",
    "ai",
    "installer",
    "npx",
    "model-context-protocol",
    "anthropic",
    "desktop",
    "tools",
    "configuration",
    "mcp-server"
  ]
}
