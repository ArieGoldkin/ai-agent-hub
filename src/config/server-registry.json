{
  "servers": {
    "filesystem": {
      "name": "Filesystem Operations",
      "description": "Secure filesystem operations with PROJECT_ROOT sandboxing for reading, writing, and searching files",
      "package": "@modelcontextprotocol/server-filesystem",
      "version": "latest",
      "transport": "stdio",
      "capabilities": ["filesystem"],
      "tools": [
        {
          "name": "read_file",
          "description": "Read file contents from filesystem",
          "security": "sandboxed"
        },
        {
          "name": "write_file",
          "description": "Write content to file in filesystem",
          "security": "sandboxed"
        },
        {
          "name": "list_directory",
          "description": "List directory contents",
          "security": "sandboxed"
        },
        {
          "name": "search_files",
          "description": "Search for files matching pattern",
          "security": "sandboxed"
        }
      ],
      "security": {
        "sandboxed": true,
        "requiresAuth": false,
        "permissions": ["read", "write", "filesystem"],
        "environmentVariables": ["PROJECT_ROOT"]
      },
      "defaultConfig": {
        "allowedDirectories": ["${PROJECT_ROOT}"],
        "maxFileSize": "10MB",
        "allowedExtensions": [".ts", ".js", ".json", ".md", ".txt", ".yml", ".yaml"]
      },
      "category": "core"
    },
    "git": {
      "name": "Git Version Control",
      "description": "Git operations including commits, branches, diffs, and logs with security-first approach",
      "package": "@modelcontextprotocol/server-git",
      "version": "latest",
      "transport": "stdio",
      "capabilities": ["git"],
      "tools": [
        {
          "name": "git_status",
          "description": "Get repository status",
          "security": "sandboxed"
        },
        {
          "name": "git_commit",
          "description": "Create git commit",
          "security": "sandboxed"
        },
        {
          "name": "git_diff",
          "description": "Show git diff",
          "security": "sandboxed"
        },
        {
          "name": "git_log",
          "description": "Show commit history",
          "security": "sandboxed"
        },
        {
          "name": "git_branch",
          "description": "Git branch operations",
          "security": "sandboxed"
        }
      ],
      "security": {
        "sandboxed": true,
        "requiresAuth": false,
        "permissions": ["read", "write", "git"],
        "environmentVariables": ["PROJECT_ROOT"]
      },
      "defaultConfig": {
        "allowAutoCommit": false,
        "signCommits": true,
        "workingDirectory": "${PROJECT_ROOT}"
      },
      "category": "core"
    },
    "github": {
      "name": "GitHub Integration",
      "description": "GitHub API integration for managing repositories, issues, and pull requests with OAuth2/PAT authentication",
      "package": "@modelcontextprotocol/server-github",
      "version": "latest",
      "transport": "stdio",
      "capabilities": ["github"],
      "tools": [
        {
          "name": "create_pull_request",
          "description": "Create GitHub pull request",
          "security": "authenticated"
        },
        {
          "name": "list_issues",
          "description": "List repository issues",
          "security": "authenticated"
        },
        {
          "name": "create_issue",
          "description": "Create repository issue",
          "security": "authenticated"
        },
        {
          "name": "get_repository",
          "description": "Get repository information",
          "security": "authenticated"
        }
      ],
      "security": {
        "sandboxed": false,
        "requiresAuth": true,
        "permissions": ["network", "github"],
        "environmentVariables": ["GITHUB_TOKEN", "GITHUB_AUTH_MODE"]
      },
      "defaultConfig": {
        "authMode": "oauth2",
        "scopes": ["repo", "issues", "pull_requests"],
        "apiVersion": "2022-11-28"
      },
      "category": "core"
    },
    "sequential-thinking": {
      "name": "Sequential Thinking",
      "description": "Advanced reasoning capabilities with planning, reflection, and optimization for complex problem solving",
      "package": "@modelcontextprotocol/server-sequential-thinking",
      "version": "latest",
      "transport": "stdio",
      "capabilities": ["reasoning", "analysis"],
      "tools": [
        {
          "name": "think",
          "description": "Perform structured thinking process",
          "security": "none"
        },
        {
          "name": "plan",
          "description": "Create execution plan for complex tasks",
          "security": "none"
        },
        {
          "name": "reflect",
          "description": "Reflect on completed actions and outcomes",
          "security": "none"
        },
        {
          "name": "optimize",
          "description": "Optimize approach based on feedback",
          "security": "none"
        }
      ],
      "security": {
        "sandboxed": false,
        "requiresAuth": false,
        "permissions": [],
        "environmentVariables": []
      },
      "defaultConfig": {
        "maxThinkingSteps": 10,
        "enableReflection": true
      },
      "category": "optional"
    },
    "context7": {
      "name": "Documentation Search",
      "description": "Context7 powered documentation search and code snippet retrieval from various sources",
      "package": "@upstash/context7-mcp",
      "version": "latest",
      "transport": "http",
      "capabilities": ["documentation"],
      "tools": [
        {
          "name": "search_docs",
          "description": "Search documentation and code snippets",
          "security": "authenticated"
        },
        {
          "name": "fetch_snippet",
          "description": "Fetch specific code snippet by ID",
          "security": "authenticated"
        },
        {
          "name": "index_content",
          "description": "Index new content for search",
          "security": "authenticated"
        }
      ],
      "security": {
        "sandboxed": false,
        "requiresAuth": true,
        "permissions": ["network"],
        "environmentVariables": ["CONTEXT7_API_KEY"]
      },
      "defaultConfig": {
        "baseUrl": "https://api.upstash.com",
        "maxResults": 20,
        "enableCaching": true
      },
      "category": "optional"
    },
    "playwright": {
      "name": "Browser Automation",
      "description": "Playwright-powered browser automation for testing, scraping, and web interaction",
      "package": "@playwright/mcp",
      "version": "latest",
      "transport": "stdio",
      "capabilities": ["browser", "testing"],
      "tools": [
        {
          "name": "navigate",
          "description": "Navigate to URL in browser",
          "security": "restricted"
        },
        {
          "name": "click",
          "description": "Click element on page",
          "security": "restricted"
        },
        {
          "name": "screenshot",
          "description": "Take screenshot of page",
          "security": "restricted"
        },
        {
          "name": "extract_text",
          "description": "Extract text content from page",
          "security": "restricted"
        },
        {
          "name": "fill_form",
          "description": "Fill form fields",
          "security": "restricted"
        }
      ],
      "security": {
        "sandboxed": true,
        "requiresAuth": false,
        "permissions": ["network", "filesystem"],
        "environmentVariables": []
      },
      "defaultConfig": {
        "headless": true,
        "timeout": 30000,
        "viewport": {
          "width": 1280,
          "height": 720
        },
        "allowedDomains": ["localhost", "127.0.0.1"]
      },
      "category": "optional"
    }
  },
  "categories": {
    "core": {
      "name": "Core Servers",
      "description": "Essential servers that are always enabled for basic functionality",
      "servers": ["filesystem", "git", "github"]
    },
    "optional": {
      "name": "Optional Servers",
      "description": "Additional servers that can be enabled based on feature requirements",
      "servers": ["sequential-thinking", "context7", "playwright"]
    }
  }
}