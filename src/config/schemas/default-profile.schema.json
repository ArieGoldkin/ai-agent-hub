{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-agent-hub.com/schemas/default-profile.schema.json",
  "title": "AI Agent Hub Profile",
  "description": "Configuration profile for AI Agent Hub with enabled servers and settings",
  "type": "object",
  "properties": {
    "profile": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Profile display name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Profile configuration version"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Profile description"
        }
      },
      "required": ["name", "version", "description"],
      "additionalProperties": false
    },
    "system": {
      "type": "object",
      "properties": {
        "projectRoot": {
          "type": "string",
          "pattern": "^\\$\\{[A-Z_]+\\}$|^/.*$",
          "description": "Project root directory (absolute path or environment variable)"
        },
        "memoryBackend": {
          "type": "string",
          "enum": ["sqlite", "postgresql", "hybrid"],
          "description": "Memory backend for agent context"
        },
        "contextDirectory": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9._-]+$",
          "description": "Directory name for agent context files"
        },
        "logLevel": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug", "trace"],
          "description": "Logging verbosity level"
        },
        "enableAuditLog": {
          "type": "boolean",
          "description": "Enable audit logging for security"
        }
      },
      "required": ["projectRoot", "memoryBackend", "contextDirectory"],
      "additionalProperties": false
    },
    "servers": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "$ref": "#/$defs/EnabledServerConfig"
            }
          },
          "additionalProperties": false,
          "description": "Map of enabled server configurations"
        },
        "disabled": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "uniqueItems": true,
          "description": "List of explicitly disabled server IDs"
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "security": {
      "type": "object",
      "properties": {
        "authMode": {
          "type": "string",
          "enum": ["none", "oauth2", "jwt", "api-key"],
          "description": "Authentication mode"
        },
        "requireAuthentication": {
          "type": "boolean",
          "description": "Whether authentication is required"
        },
        "sandboxMode": {
          "type": "boolean",
          "description": "Enable sandboxing for filesystem operations"
        },
        "allowedOrigins": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^https?://.*$"
          },
          "description": "Allowed origins for CORS"
        },
        "rateLimiting": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "requestsPerMinute": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000
            }
          },
          "required": ["enabled"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "features": {
      "type": "object",
      "properties": {
        "enableBrowserAutomation": {
          "type": "boolean",
          "description": "Enable Playwright browser automation"
        },
        "enableDocumentationSearch": {
          "type": "boolean",
          "description": "Enable Context7 documentation search"
        },
        "enableSequentialThinking": {
          "type": "boolean",
          "description": "Enable sequential thinking capabilities"
        },
        "enableGitHubIntegration": {
          "type": "boolean",
          "description": "Enable GitHub API integration"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["profile", "system", "servers"],
  "additionalProperties": false,
  "$defs": {
    "EnabledServerConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether server is enabled"
        },
        "config": {
          "type": "object",
          "description": "Server-specific configuration overrides",
          "additionalProperties": true
        },
        "environmentVariables": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "description": "Environment variables for this server"
        },
        "toolOverrides": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9_]*$": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "security": {
                  "type": "string",
                  "enum": ["none", "sandboxed", "authenticated", "restricted"]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false,
          "description": "Per-tool configuration overrides"
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    }
  }
}